@page
@model RegisterModel
@{
    ViewData["Title"] = "Register"; 
   Layout = "~/Views/Shared/_Layout.cshtml";
}

    <!-- Navbar Start -->
    @await Component.InvokeAsync("NavbarC")
    <!-- Navbar End -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" asp-area="" asp-action="index" asp-controller="home">Trang chủ</a>
                    <span class="breadcrumb-item active">Tạo tài khoảng</span>
                </nav>
            </div>
        </div>
    </div>
    <section class="pt-5 pb-5 mt-0 align-items-center d-flex bg-dark" style="min-height: 100vh; background-size: cover; background-image: url(https://images.unsplash.com/photo-1477346611705-65d1883cee1e?ixlib=rb-0.3.5&amp;q=80&amp;fm=jpg&amp;crop=entropy&amp;cs=tinysrgb&amp;w=1920&amp;fit=max&amp;ixid=eyJhcHBfaWQiOjMyMDc0fQ&amp;s=c0d43804e2c7c93143fe8ff65398c8e9);">
        <div class="container-fluid">
          <div class="row  justify-content-center align-items-center d-flex-row text-center h-100">
            <div class="col-12 col-md-4 col-lg-3 h-50 ">
              <div class="card shadow">
                <div class="card-body mx-auto">
                  <h3 class=" mt-3 ">Tạo tài khoản</h3>
                  <p class="text-center font-weight-normal" style="color:black">Bắt đầu với tài khoản miễn phí của bạn</p>
                  <p>
                       <form  id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                           @foreach (var provider in Model.ExternalLogins!)
                           {
                               <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                           }
                       </form>
                  </p>
                  <p class="text-muted font-weight-bold ">
                    <span>Hoặc</span>
                  </p>
                  <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"style="max-width:50px"><i class="fa-solid fa-envelope"></i> </span>
                      </div>
                      <input asp-for="Input.Email" class="form-control" placeholder="Địa chỉ email" autocomplete="username" aria-required="true" type="email">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"style="max-width:50px"> <i class="fa-solid fa-user"></i> </span>
                      </div>
                      <input asp-for="Input.Name" class="form-control" placeholder="Tên" autocomplete="username" aria-required="true" type="text">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"style="max-width:50px"> <i class="fa-solid fa-city"></i> </span>
                      </div>
                      <input asp-for="Input.City" class="form-control" placeholder="Thành phố" autocomplete="City" aria-required="true" type="text">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"style="max-width:50px"> <i class="fa-solid fa-address-book"></i> </span>
                      </div>
                      <input asp-for="Input.StreetAddress" class="form-control" placeholder="Đia chỉ nhà" autocomplete="StreetAddress" aria-required="true" type="text">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"style="max-width:50px"> <i class="fa-solid fa-code"></i> </span>
                      </div>
                      <input asp-for="Input.PostalCode" class="form-control" placeholder="Mã bưu điện" autocomplete="PostalCode" aria-required="true" type="text">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text"style="max-width:50px"> <i class="fa-brands fa-usps"></i> </span>
                      </div>
                      <input asp-for="Input.State" class="form-control" placeholder="Trạng thái" autocomplete="State" aria-required="true" type="text">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text" style="max-width:50px"> <i class="fa-solid fa-lock"></i> </span>
                      </div>
                      <input asp-for="Input.Password" class="form-control" placeholder="Mật khẩu" type="password" autocomplete="password" aria-required="true">
                    </div>
                    <div class="form-group input-group">
                      <div class="input-group-prepend">
                        <span class="input-group-text" style="max-width:50px"> <i class="fa-solid fa-lock"></i> </span>
                      </div>
                      <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" type="password" autocomplete="current-password" aria-required="true">
                    </div>
                    <div class="form-group input-group">
                       <select asp-for="Input.Role" asp-items="@Model.Input.selectListItems" style="border:none" class="form-select">
                           <option disabled>-Chọn quyền-</option>
                       </select>
                       <div id="Company">
                       <select asp-for="Input.Company" asp-items="@Model.Input.companyListItems" style="border:none" class="form-select">
                            <option disabled>-Chọn công ty-</option>
                       </select>
                       </div>
                    </div>
                    <div class="form-group">
                      <button type="submit" class="btn btn-primary btn-block"> Tạo tài khoản </button>
                    </div>
                    
                    <p class="text-center font-weight-normal" style="color:black">Bạn có một tài khoản?
                      <a asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
                    </p>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
     </section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
$(document).ready(function() {
    $('#Company').hide()
    $('#Input_Role').change(function() {
        var selectRole = $('#Input_Role').val()
        if (selectRole != "Company") {
            $('#Company').hide()
        } else {
            $('#Company').show()

        }
    })
})
    </script>
}
