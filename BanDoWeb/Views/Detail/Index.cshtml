@model BanDoWeb.Model.Models.DetailVM
@using System.Globalization
@using BanDoWeb.Model.Models
@{
    var slide = new SlideImageVM();
    var s = 1;
}
<style>
    .star.active,
    .star:hover {
      color: gold;
    }
</style>
    <!-- Navbar Start -->
    @await Component.InvokeAsync("NavbarC")
    <!-- Navbar End -->
<div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="#">Trang chủ</a>
                    <a class="breadcrumb-item text-dark" href="#">Cửa hàng</a>
                    <span class="breadcrumb-item active">Chi tiết sản phẩm</span>
                </nav>
            </div>
        </div>
    </div>

<div class="container-fluid pb-5">
        <div class="row px-xl-5">
            <div class="col-lg-5 mb-30">
                <div id="product-carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner bg-light">
                    @foreach(var item in Model.SlidedImages)
                    {
                        
                        if (s == 1)
                        {
                            slide.Image1 = item.Image;
                            s++;
                        }else if(s == 2)
                        {
                            slide.Image2 = item.Image;
                            s++;

                        }else if(s == 3)
                        {
                            slide.Image3 = item.Image;
                            s++;

                        }else if(s == 4)
                        {
                            slide.Image4 = item.Image;
                            s = 1;

                        }

                    }
                    <div class="carousel-item active carousel-item-left">
                            <img class="w-100 h-100" src="/Content/assets/img/sideimage/@slide.Image1" alt="Image">
                        </div>
                        <div class="carousel-item carousel-item-next carousel-item-left">
                            <img class="w-100 h-100" src="/Content/assets/img/sideimage/@slide.Image2" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="/Content/assets/img/sideimage/@slide.Image3" alt="Image">
                        </div>
                        <div class="carousel-item">
                            <img class="w-100 h-100" src="/Content/assets/img/sideimage/@slide.Image4" alt="Image">
                        </div>
                    </div>
                    <a class="carousel-control-prev" href="#product-carousel" data-slide="prev">
                        <i class="fa fa-2x fa-angle-left text-dark"></i>
                    </a>
                    <a class="carousel-control-next" href="#product-carousel" data-slide="next">
                        <i class="fa fa-2x fa-angle-right text-dark"></i>
                    </a>
                </div>
            </div>

            <div class="col-lg-7 h-auto mb-30">
                <input hidden value="@Model.Product.Id" id="productId" />
                <div class="h-100 bg-light p-30">
                    <h3>@Model.Product.Title</h3>
                    <div class="d-flex mb-3">
                        <div class="text-primary mr-2">
                             <p class="font-weight-normal">Lượt đánh giá: @Model.Star/5
                                <i class="fas fa-star"></i>
                             </p>
                        </div>
                        <p class="font-weight-normal">Lượt xem: (@Model.Product.Views)</p>
                    </div>
                    @{
                        <h3 class="font-weight-semi-bold mb-4">
                            @Model.Product.Price.ToString("C", CultureInfo.CreateSpecificCulture("vi-VN"))
                        </h3>
                    }
                    <div class="d-flex mb-3">
                        <strong class="text-dark mr-3">Kích thước:</strong>
                        <form>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="size-1" value="XS" name="size">
                                <label class="custom-control-label font-weight-normal" for="size-1">XS</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="size-2" value="S" name="size">
                                <label class="custom-control-label font-weight-normal" for="size-2">S</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="size-3" value="M" name="size">
                                <label class="custom-control-label font-weight-normal" for="size-3">M</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="size-4" value="L" name="size">
                                <label class="custom-control-label font-weight-normal" for="size-4">L</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="size-5" value="XL" name="size">
                                <label class="custom-control-label font-weight-normal" for="size-5">XL</label>
                            </div>
                        </form>
                    </div>
                    <div class="d-flex mb-4">
                        <strong class="text-dark mr-3">Màu:</strong>
                        <form>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="color-1" value="Black" name="color">
                                <label class="custom-control-label font-weight-normal" for="color-1">Black</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="color-2" value="White" name="color">
                                <label class="custom-control-label font-weight-normal" for="color-2">White</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="color-3"value="Red" name="color">
                                <label class="custom-control-label font-weight-normal" for="color-3">Red</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="color-4" value="Blue" name="color">
                                <label class="custom-control-label font-weight-normal" for="color-4">Blue</label>
                            </div>
                            <div class="custom-control custom-radio custom-control-inline">
                                <input type="radio" class="custom-control-input" id="color-5" value="Green" name="color">
                                <label class="custom-control-label font-weight-normal" for="color-5">Green</label>
                            </div>
                        </form>
                    </div>
                    <div class="d-flex mb-4">
                        <strong class="text-dark mr-3">Kho:</strong>
                        <p class="mb-4">@Model.Product.Warehouse</p>
                        
                    </div>
                    
                    <div class="d-flex align-items-center mb-4 pt-2">
                        <div class="input-group quantitys mr-3" style="width: 130px;">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-minuss">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" class="form-control  border-0 text-center" value="1" min="1" id="Quantity" 
                                name="credit_days" pattern="[^\-]+0" 
                                #credit_days="ngModel" class="form-control" 
                                [(ngModel)]="provider.credit_days"
                                onkeypress="return (event.charCode == 8 || event.charCode == 1 || 
                                event.charCode == 13) ? null : event.charCode >= 48 && event.charCode <= 
                                57" onpaste="return false" readonly="true">
                            <div class="input-group-btn">
                                <button class="btn btn-primary btn-pluss">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                        <button class="btn btn-primary px-3" id="AddtoCart"><i class="fa fa-shopping-cart mr-1"></i> Thêm vào giỏ hàng</button>
                    </div>
                    <div class="d-flex pt-2">
                        <strong class="text-dark mr-2">Chia sẻ:</strong>
                        <div class="d-inline-flex">
                            <a class="text-dark px-2" href="">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a class="text-dark px-2" href="">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a class="text-dark px-2" href="">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                            <a class="text-dark px-2" href="">
                                <i class="fab fa-pinterest"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="bg-light p-30">
                    <div class="nav nav-tabs mb-4">
                        <a class="nav-item nav-link text-dark active" data-toggle="tab" href="#tab-pane-1">Mô tả</a>
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-2">Thông tin</a>
                        <a class="nav-item nav-link text-dark" data-toggle="tab" href="#tab-pane-3">Đánh giá(@Model.Reviews.Count())</a>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane fade active show" id="tab-pane-1">
                            <h4 class="mb-3">Mô tả</h4>
                            <p>@Model.Product.Description</p>
                        </div>
                        <div class="tab-pane fade" id="tab-pane-2">
                            <h4 class="mb-3">Hướng dẫn chọn size</h4>
                            <div class="row">
                                <div class="col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item px-0">
                                            <img class="w-100 h-100" src="/Content/assets/img/306659da-9a05-ae00-3abb-001a75c4f485.jpg" alt="Image">
                                        </li>
                                        
                                      </ul> 
                                </div>
                                <div class="col-md-6">
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item px-0">
                                            <img class="w-100 h-100" src="/Content/assets/img/9e4d8302-b6d3-4300-6816-001a2d6ca7a4.jpg" alt="Image">
                                        </li>
                                      </ul> 
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade" id="tab-pane-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <h4 class="mb-4 font-weight-normal">Đánh Giá Sản Phẩm</h4>
                                    
                                    @foreach (var item in Model.Reviews)
                                    {
                                    <div class="media mb-4">
                                        <img src="img/user.jpg" alt="Image" class="img-fluid mr-3 mt-1" style="width: 45px;">
                                        <div class="media-body">
                                            <h6>@item.Name<small> - <i>@item.DateTime</i></small></h6>
                                            <div class="text-primary mb-2">
                                               <p>@item.Star/5
                                                    <i class="fas fa-star"></i>
                                               </p>
                                                
                                            </div>
                                            <p>@item.MessageReview</p>
                                        </div>
                                    </div>

                                    }
                                </div>
                                <div class="col-md-6">
                                    <h4 class="mb-4">Để Lại Đánh Giá</h4>
                                    <small>Địa chỉ email của bạn sẽ không được công bố. Các trường bắt buộc được đánh dấu*</small>
                                    <div class="d-flex my-3">
                                        <p class="mb-0 mr-2">Đánh giá của bạn * :</p>
                                        <div class="text">
                                            <i class="far fa-star star" data-rating="1"></i>
                                            <i class="far fa-star star" data-rating="2"></i>
                                            <i class="far fa-star star" data-rating="3"></i>
                                            <i class="far fa-star star" data-rating="4"></i>
                                            <i class="far fa-star star" data-rating="5"></i>
                                        </div>
                                    </div>
                                    <form>
                                        <input id="idProduct" value="@Model.Product.Id" hidden></input>
                                        <div class="form-group">
                                            <label for="message">Nội dung *</label>
                                            <textarea id="messageReview" cols="30" rows="5" class="form-control" placeholder="Nhập nội dung" required></textarea>
                                        </div>
                                        <div class="form-group">
                                            <label for="name">Tên *</label>
                                            <input type="text" class="form-control" id="name" placeholder="Tên" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="email">Email *</label>
                                            <input type="email" class="form-control" id="email" placeholder="Email" required>
                                        </div>
                                        <div class="form-group mb-0">
                                            <button type="button" id="btnReview" class="btn btn-primary px-3">Để lại đánh giá của bạn</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
@section Scripts{
    <script src="/Content/assets/js/Cart.js"></script>
    <script src="/Content/assets/js/Review.js"></script>

}