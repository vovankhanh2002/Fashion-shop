@using BanDoWeb.Model.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@model IEnumerable<BanDoWeb.Model.Models.Categories>
@{
}
<div class="container-fluid bg-dark mb-30">
        <div class="row px-xl-5">
            <div class="col-lg-3 d-none d-lg-block">
                <a class="btn d-flex align-items-center justify-content-between bg-primary w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; padding: 0 30px;">
                    <h6 class="text-dark m-0"><i class="fa fa-bars mr-2"></i>Loại</h6>
                    <i class="fa fa-angle-down text-dark"></i>
                </a>
                <nav class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light" id="navbar-vertical" style="width: calc(100% - 30px); z-index: 999;">
                    <div class="navbar-nav w-100">
                    @foreach(var item in Model)
                    {
                        <a asp-area="" asp-controller="shop" asp-action="Index" asp-route-id="@item.Id" class="nav-item nav-link">@item.NameCategori</a>
                    }
                    </div>
                </nav>
            </div>
            <div class="col-lg-9">
                <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-3 py-lg-0 px-0">
                    <a asp-area="" asp-controller="home" asp-action="index" class="text-decoration-none d-block d-lg-none">
                        <span class="h1 text-uppercase text-dark bg-light px-2">Multi</span>
                        <span class="h1 text-uppercase text-light bg-primary px-2 ml-n1">Shop</span>
                    </a>
                    <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                        <div class="navbar-nav mr-auto py-0" id="myDIV">
                            <a asp-area="" asp-controller="home" asp-action="index" class="nav-item btn nav-link active">Trang chủ</a>
                            <a asp-area="" asp-controller="shop" asp-action="index" class="nav-item bsn nav-link">Cửa hàng</a>
                            <div class="nav-item dropdown">
                                <a href="#" class="nav-link dropdown-toggle btn"  data-toggle="dropdown">Trang <i class="fa fa-angle-down mt-1"></i></a>
                                <div class="dropdown-menu rounded-0 border-0 m-0" style="background-color:#FFD333">
                                    <a asp-area="" asp-controller="cart" asp-action="showcart" class="dropdown-item">Giỏ hàng</a>
                                    <a asp-area="" asp-controller="cart" asp-action="checkout" class="dropdown-item">Thanh toán</a>
                                </div>
                            </div>
                            <a asp-area="" asp-action="index" asp-controller="contactus" class="nav-item btn nav-link">Liên hệ</a>
                        </div>
                        <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                            <a asp-area="" asp-controller="cart" asp-action="showcart" class="btn px-0 ml-3">
                                <i class="fas fa-shopping-cart text-primary"></i>
                            <span class="badge text-secondary border border-secondary rounded-circle" style="padding-bottom: 2px;">@ViewBag.countCart </span>
                        </a>
                        </div>
                    </div>
                </nav>
            </div>
        </div>
    </div>  

@section Scripts{
    <script src="/Content/assets/js/Active.js"></script>
}